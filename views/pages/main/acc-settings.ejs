                    <% include ../../partials/sidenav-main %>
                </div><!-- End of left menu div --> 

                <br>
                
                <!-- Main content of the page -->
                <div id="content" class="col-xs-13 col-md-9">
                    
                    <h1>Account Settings</h1>
                    
                    <!--  General Account section -->
                    <div id="general-acc">
                        <h2>General Account Settings</h2>
                        <div id="general-content">
                            <br>
                            <!-- TODO: ADD SETTINGS HERE -->
                            <table class="general-table">
                                
                              <tr>
                                <td class="tg-yw4l">
                                    Username
                                </td>
                                <td class="tg-yw4l">
                                  
                                    <% if (user.local.email) { %>
                                            <%= user.local.username %>
                                    <% } else { %>
                                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                                    <% } %>
                                </td>
                                <td class="tg-yw4l"><a href="#change">Change Username</a></td>
                              </tr>
                                
                              <tr>
                                <td class="tg-yw4l">E-mail</td>
                                <td class="tg-yw4l">
                                    <% if (user.local.email) { %>
                                            <%= user.local.email %>
                                    <% } else { %>
                                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                                    <% } %>  
                                </td>
                                <td class="tg-yw4l"><a href="#change">Change e-mail</a></td>
                              </tr>
                                
                              
                             <tr>
                              <td class="tg-yw4l">Student Number</td>
                                <td class="tg-yw4l">
                                    <% if (user.local.email) { %>
                                            <%= user.local.stunum %>
                                    <% } else { %>
                                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                                    <% } %>                                         
                                </td>
                                <td class="tg-yw4l"><a href="#change">Change Student Number</a></td>
                              </tr>     
                                
                              <tr>
                                <td class="tg-yw4l">Date of Birth</td>
                                <td class="tg-yw4l">
                                    <% if (user.local.email) { %>
                                            <%= user.local.birthday %>
                                    <% } else { %>
                                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                                    <% } %>                                         
                                </td>
                                <td class="tg-yw4l"><a href="#change">Change DoB</a></td>
                              </tr>                                                           
                              <tr>
                                <td class="tg-yw4l">First Name</td>
                                <td class="tg-yw4l">
                                    <% if (user.local.email) { %>
                                            <%= user.local.givenname %>
                                    <% } else { %>
                                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                                    <% } %>                                         
                                </td>
                                <td class="tg-yw4l"><a href="#change">Change your name</a></td>
                              </tr>                              
                              <tr>
                                <td class="tg-yw4l">Last Name</td>
                                <td class="tg-yw4l">
                                    <% if (user.local.email) { %>
                                            <%= user.local.familyname %>
                                    <% } else { %>
                                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                                    <% } %>                                         
                                </td>
                                <td class="tg-yw4l"><a href="#change">Change last name</a></td>
                              </tr>
                            </table>
                            <br>
                        </div><!-- End of user about content div -->
                    
                    </div><!-- End of general account settings div -->                    
                    
                    <br>
                    
